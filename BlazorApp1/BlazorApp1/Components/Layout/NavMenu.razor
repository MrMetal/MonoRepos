<MudAppBar Elevation="1">
    <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
    <MudSpacer />
    <MudAvatar Style="background-color: #00a884; color:#0c141b;">
        <MudIcon Icon="@Icons.Material.Filled.Person" Title="Perfil"></MudIcon>
    </MudAvatar>
</MudAppBar>

<MudDrawer @bind-Open="_drawerOpen" Elevation="2">
    <MudDrawerHeader>
        <MudText Typo="Typo.h6">Park Aqui</MudText>
        <small>&nbsp; Versão 1.0.1</small>
    </MudDrawerHeader>

    <MudNavMenu>
        <MudNavLink Icon="@Icons.Material.Filled.Home" Href="/">Home</MudNavLink>
        <MudNavLink Icon="@Icons.Material.Filled.Business" Href="/estacionamento">Estacionamento</MudNavLink>
        <MudNavLink Icon="@Icons.Material.Filled.Dashboard" Href="/dashboard">Dashboard</MudNavLink>
        <MudNavLink Icon="@Icons.Material.Filled.AttachMoney" Href="/listaservicos">Serviços</MudNavLink>
        <MudNavLink Icon="@Icons.Material.Filled.AttachMoney" Href="/valores-v2">Valores</MudNavLink>
        <MudNavLink Icon="@Icons.Material.Filled.Group" Href="/listausuarios">Usuarios</MudNavLink>
        <MudNavLink Icon="@Icons.Material.Filled.ShowChart" Href="/faturamentos">Faturamentos</MudNavLink>
        <MudNavLink Icon="@Icons.Material.Filled.Logout">LogOut</MudNavLink>
    </MudNavMenu>

</MudDrawer>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}